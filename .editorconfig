# EditorConfig
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,pyw}]
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{md,txt}]
trim_trailing_whitespace = false

[*.{sh,bash}]
indent_style = space
indent_size = 2
